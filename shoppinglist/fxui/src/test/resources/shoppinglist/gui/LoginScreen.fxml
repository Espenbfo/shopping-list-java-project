<Pane prefHeight="500.0" prefWidth="400.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" id="window">
    <children>
        <Label id="shoppingTitle" layoutX="0.0" prefWidth="400.0" layoutY="25.0" text="Login" alignment="CENTER"></Label>
        <TextField fx:id="usernameInputField" layoutX="100.0" layoutY="150.0" prefHeight="27.0" prefWidth="200.0" promptText="username" onAction="#handleLogin"/>
        <PasswordField fx:id="passwordInputField" layoutX="100.0" layoutY="200.0" prefHeight="27.0" prefWidth="200.0" promptText="password" onAction="#handleLogin"/>
        <Button fx:id="loginButton" layoutX="100.0" layoutY="250.0" mnemonicParsing="false" onAction="#handleLogin" prefHeight="27.0" prefWidth="95.0" text="Login"  id="loginButton"/>
        <Button fx:id="registerButton" layoutX="205.0" layoutY="250.0" mnemonicParsing="false" onAction="#handleRegister" prefHeight="27.0" prefWidth="95.0" text="Register"  id="registerButton"/>
        <Label fx:id="errorLabel" id="error" layoutX="0.0" prefWidth="400.0" layoutY="300.0" text="" alignment="CENTER"></Label>
    </children>
</Pane>

